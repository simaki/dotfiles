[user]
  name = Shota Imaki
  email = shota.imaki.0801@gmail.com
[core]
  editor = nvim
  ignorecase = false
  quotepath = false
[pull]
  rebase = false
[alias]
  a = add
  af = add-fzf
  ap = add --patch
  b = branch
  c = commit --quiet -m
  co = checkout --quiet
  cob = checkout -b
  cof = checkout-fzf
  pl = pull
  ps = push
  reword = !git commit --amend --only
  s = status --short
  # Fuzzy-find a resource and then add.
  # Fuzzy-find a branch and then checkout.
  add-fzf = !find $(git rev-parse --show-toplevel) | fzf | git add
  checkout-fzf = "!__checkout_fzf() { \
    local branches branch; \
    branches=$(git --no-pager branch -vv) && branch=$(echo \"$branches\" | fzf +m) && git checkout $(echo \"$branch\" | awk '{print $1}' | sed \"s/.* //\"); \
  }; __checkout_fzf"
  # Delete merged branches.
  delete-merged = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  # Show git-flight-rules.
  flight = "!curl -fs https://raw.githubusercontent.com/k88hudson/git-flight-rules/master/README.md > /tmp/git-flight-rules.md \
    && view +$(grep -n \"$(grep '^###' /tmp/git-flight-rules.md | sort | fzf)\" /tmp/git-flight-rules.md | cut -f1 -d:) /tmp/git-flight-rules.md"
[init]
  defaultBranch = main
[github]
  user = simaki
[color]
  ui = true
[push]
  default = current
[commit]
  template = $HOME/.stCommitMsg
