{
  "diagnostic.enableSign": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--skip-magic-trailing-space"],
  "python.sortImports.args": ["--force-single-line"],
  "pyright.organizeimports.provider": "isort"
}
