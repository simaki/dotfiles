{
    "breadcrumbs.enabled": false,
    "debug.console.fontSize": 10,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 16,
    "editor.detectIndentation": false,
    "editor.fontFamily": "SF Mono, Roboto Mono, Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 10,
    "editor.lightbulb.enabled": false,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "none",
    "editor.smoothScrolling": true,
    "editor.suggestSelection": "first",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/__pycache__/": true,
        "*.py[cod]": true,
        ".vscode/*": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "jupyter.askForKernelRestart": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "terminal.integrated.fontSize": 10,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        "editorError.foreground": "#fdaeb7",
        "editorWarning.foreground": "#fff5b1",
        "statusBar.background": "#ffffff",
        "statusBar.debuggingBackground": "#ffffff",
        "statusBar.foreground": "#000000",
        "statusBar.noFolderBackground": "#ffffff"
    },
    "workbench.colorTheme": "GitHub Light Default",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.iconTheme": null,
    "workbench.preferredDarkColorTheme": "GitHub Dark Default",
    "workbench.startupEditor": "none",
    // --- extensions ---
    "vim.normalModeKeyBindingsNonRecursive": [
        // nnoremap
        {"before": ["-"], "after": ["<C-x>"]},
        {"before": ["+"], "after": ["<C-a>"]},
        {"before": ["<CR>"], "after": ["o", "<Esc>"]},
        {"before": ["<Esc>", "<Esc>"], "after": [":", "n", "o", "h", "<CR>", "<Esc>"]},
        {"before": ["<SPACE>"], "after": ["i", "<SPACE>", "Esc", "l"]},
        {"before": ["<TAB>"], "after": ["i", "<TAB>", "Esc"]},
        {"before": ["H"], "after": ["0"]},
        {"before": ["K"], "after": ["i", "<CR>", "<Esc>"]},
        {"before": ["L"], "after": ["$"]},
        {"before": ["n"], "after": ["n", "z", "z"]},
        {"before": ["N"], "after": ["N", "z", "z"]},
        {"before": ["Y"], "after": ["y", "$"]},
        // {"before": ["<C-h>"], "after": ["<C-w>", "h"]},
        // {"before": ["<C-j>"], "after": ["<C-w>", "j"]},
        // {"before": ["<C-k>"], "after": ["<C-w>", "k"]},
        // {"before": ["<C-l>"], "after": ["<C-w>", "l"]},
        {"before": ["<Leader>", "p"], "commands": ["workbench.action.showCommands"]}
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        // inoremap
        {"before": ["j", "k"], "after": ["<Esc>"]}
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // vnoremap
        {"before": ["Y"], "after": ["y", "$"]}
    ],
    "vim.highlightedyank.enable": true,
    // GitHub Color System: https://primer.style/css/support/color-system color-scale-blue-1
    "vim.highlightedyank.color": "#dbedff",
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    // Vim status bar
    // "vim.statusBarColorControl": true,
    "vim.statusBarColorControl": false,
    "vim.statusBarColors.normal": "#ffffff",
    "vim.statusBarColors.insert": "#dbedff", // color-scale-blue-1
    // "vim.statusBarColors.insert": "#c8e1ff", // color-scale-blue-2
    "vim.statusBarColors.visual": "#fedbf0", // color-scale-pink-1
    "vim.statusBarColors.visualline": "#fedbf0", // color-scale-pink-1
    "vim.statusBarColors.visualblock": "#fedbf0", // color-scale-pink-1
    "vim.statusBarColors.replace": "#ffdce0", // color-scale-red-0
    "vim.statusBarColors.commandlineinprogress": "#ffffff",
    "vim.statusBarColors.searchinprogressmode": "#ffffff",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
    "go.lintOnSave": "file",
    "go.toolsManagement.autoUpdate": true,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-format.trailingComma": true,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.tools": [
        {"name": "latexmk", "command": "latexmk", "args": ["%DOC%"]},
        {"name": "latexmk-clean", "command": "latexmk", "args": ["-c", "%DOC%"]},
        {"name": "tectonic", "command": "tectonic", "args": ["%TEX%"]}
    ],
    "latex-workshop.latex.recipes": [
        {"name": "latexmk", "tools": ["latexmk"]},
        // {"name": "latexmk", "tools": ["latexmk", "latexmk-clean"]},
        {"name": "tectonic", "tools": ["tectonic"]}
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.autoComplete.addBrackets": true,
    "python.defaultInterpreterPath": "\"$(brew --prefix)/bin/python@${PYTHON_VERSION}:$PATH\"",
    "python.formatting.blackArgs": ["--skip-magic-trailing-comma"],
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.formatting.provider": "black",
    "python.insidersChannel": "daily",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Args": ["--max-line-length", "88", "--ignore=E203,W503"],
    "python.linting.lintOnSave": false,
    "python.linting.pylintEnabled": true,
    "python.poetryPath": "/usr/local/bin/poetry",
    "python.pythonPath": "\"$(brew --prefix)/bin/python@${PYTHON_VERSION}:$PATH\"",
    "python.sortImports.args": ["--force-single-line"],
    "python.sortImports.path": "/usr/local/bin/isort",
    "python.testing.pytestEnabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "vim.normalModeKeyBindingsNonRecursive": [
            {"before": ["<Leader>", "r"], "commands": ["python.execInTerminal"]}
        ]
    },
    "[latex]": {
        "editor.formatOnSave": true,
    },
    "[C_cpp]": {
        // "editor.defaultFormatter": "",
        "vim.normalModeKeyBindingsNonRecursive": [
            {"before": ["<Leader>", "r"], "commands": ["C_Cpp.execInTerminal"]}
        ],
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.inlineSuggest.enabled": true,
}
