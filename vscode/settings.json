{
    "breadcrumbs.enabled": false,
    "debug.console.fontSize": 10,
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLines": 16,
    "editor.detectIndentation": false,
    "editor.fontFamily": "Roboto Mono, Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 10,
    "editor.lightbulb.enabled": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "none",
    "editor.smoothScrolling": true,
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "files.exclude": {
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/__pycache__/": true,
        "*.py[cod]": true,
        ".vscode/*": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "jupyter.alwaysTrustNotebooks": true,
    "jupyter.askForKernelRestart": false,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "scm.diffDecorationsGutterVisibility": "hover",
    "terminal.integrated.fontSize": 10,
    "vim.normalModeKeyBindingsNonRecursive": [
        // nnoremap
        {"before": ["-"], "after": ["<C-x>"]},
        {"before": ["+"], "after": ["<C-a>"]},
        {"before": ["<CR>"], "after": ["o", "<Esc>"]},
        {"before": ["<Esc>", "<Esc>"], "after": [":", "n", "o", "h", "<CR>", "<Esc>"]},
        {"before": ["<SPACE>"], "after": ["i", "<SPACE>", "Esc", "l"]},
        {"before": ["<TAB>"], "after": ["i", "<TAB>", "Esc"]},
        {"before": ["H"], "after": ["0"]},
        {"before": ["K"], "after": ["i", "<CR>", "<Esc>"]},
        {"before": ["L"], "after": ["$"]},
        {"before": ["n"], "after": ["n", "z", "z"]},
        {"before": ["N"], "after": ["N", "z", "z"]},
        {"before": ["Y"], "after": ["y", "$"]},
        // TODO: enable it only when python
        {"before": ["<Leader>", "r"], "commands": ["python.execInTerminal"]}
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        // inoremap
        {"before": ["j", "k"], "after": ["<Esc>"]}
    ],
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.activityBar.visible": false,
    "workbench.colorCustomizations": {
        // Theme color: https://code.visualstudio.com/api/references/theme-color
        // GitHub Color System: https://primer.style/css/support/color-system
        "editorError.foreground": "#ffdce0", // color-scale-red-1
        "editorWarning.foreground": "#fffbdd", // color-scale-yellow-1
    },
    "workbench.colorTheme": "GitHub Light Default",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter-notebook",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.iconTheme": null,
    "workbench.preferredDarkColorTheme": "GitHub Dark Default",
    "workbench.startupEditor": "none",
    // --- extensions ---
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
    "go.lintOnSave": "file",
    "go.toolsManagement.autoUpdate": true,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-format.trailingComma": true,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.autoComplete.addBrackets": true,
    "python.defaultInterpreterPath": "\"$(brew --prefix)/bin/python@${PYTHON_VERSION}:$PATH\"",
    "python.formatting.blackArgs": ["--skip-magic-trailing-comma"],
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.formatting.provider": "black",
    "python.insidersChannel": "daily",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Args": ["--max-line-length", "88", "--ignore=E203,W503"],
    "python.linting.lintOnSave": false,
    "python.linting.pylintEnabled": true,
    "python.poetryPath": "/usr/local/bin/poetry",
    "python.pythonPath": "\"$(brew --prefix)/bin/python@${PYTHON_VERSION}:$PATH\"",
    "python.sortImports.args": ["--force-single-line"],
    "python.sortImports.path": "/usr/local/bin/isort",
    "python.testing.pytestEnabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "vim.normalModeKeyBindingsNonRecursive": [
            {"before": ["<Leader>", "r"], "commands": ["python.execInTerminal"]}
        ],
    },
}
